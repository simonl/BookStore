<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
    <%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">


<form action="<c:url  value="/YourmomServlet" />"method="post">
				<p> Enter book information: </p>
				<p> Title : <input type="text" name="title"> </p>
				<p> Author : <input type="text" name="author"> </p>
				<p> Publisher : <input type="text" name="publisher"> </p>
				<p> ISBN 10 number : <input type="text" name="isbn10" placeholder="1111111111"> </p>
				<p> ISBN 13 number : <input type="text" name="isbn13" placeholder="111-1111111111"> </p>
				<p> Genre : <input type="text" name="genre"> </p>
				<p> Description : <input type="text" name="description"> </p>
				<p> Number of pages : <input type="text" name="numberofpages"> </p>
				<p> Weight : <input type="text" name="weight"> </p>
				<p> Dimensions : <input type="text" name="dimensions" placeholder="(10.0,10.0,10.0)"> </p>
				<p> Thumbnail : <input type="text" name="thumbnail"> </p>
				<p> Cover : <input type="text" name="cover"> </p>
				<p> List price : <input type="text" name="listprice"> </p>
				<p> Sale price : <input type="text" name="saleprice"> </p>
				<p> Whole sale price : <input type="text" name="wholesaleprice"> </p>
				<p> Number of books : <input type="text" name="numberofbooks"> </p>
				<p> <input type="submit" value="Submit"> </p>
				
</form>