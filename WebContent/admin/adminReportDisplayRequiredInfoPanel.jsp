<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
 <%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<div id="dateDisplay" class="dateDisplay">
	<fieldset><legend>Main Statistics</legend>
	<span><p>Report Start Date: ${startDate}</p><p>Report End Date: ${endDate}</p></span>
	<table style="width: 100%;">
		<tr>
			<td>Total Sales</td><td>Total Cost</td><td>Total Profit</td>
		</tr>
		<tr>
			<td>$<fmt:formatNumber  value="${totalSales}" minFractionDigits="2" maxFractionDigits="2" /></td><td>$<fmt:formatNumber  value="${totalCost}" minFractionDigits="2" maxFractionDigits="2" /></td><td>$<fmt:formatNumber  value="${totalProfit}" minFractionDigits="2" maxFractionDigits="2" /></td>
		</tr>
	</table>
	</fieldset>
</div><br /><br /><br /><br />